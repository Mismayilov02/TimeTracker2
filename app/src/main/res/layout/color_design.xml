<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/color_design_basecolor"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        app:cardBackgroundColor="#CD5353"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck,UsingOnClickInXml" />

    <androidx.cardview.widget.CardView
        android:id="@+id/color_design_sellect_color"
        android:layout_width="41dp"
        android:layout_height="4dp"
        android:layout_marginTop="3dp"
        android:visibility="invisible"
        app:cardBackgroundColor="@android:color/holo_red_dark"
        app:cardCornerRadius="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/color_design_basecolor" />
</androidx.constraintlayout.widget.ConstraintLayout>